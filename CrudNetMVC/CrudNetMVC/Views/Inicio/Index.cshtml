@model IEnumerable<CrudNetMVC.Models.Contacto>
@{
    ViewData["Title"] = "Lista de contacto";
}

<h1 class="text-center my-4">Contacto con .NET7 (.NET Core MVC)</h1>

<div class="row mb-4">
    <div class="col-12 text-end">
        <a asp-action="Crear" asp-controller="Inicio" class="btn btn-primary btn-lg">
            <i class="bi bi-file-plus-fill"></i> Nuevo Usuario
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0"><i class="bi bi-list-ul"></i> Lista de Usuarios</h4>
            </div>

            <div class="card-body bg-light">
                <div class="table-responsive">
                    @if (Model.Any())
                    {
                        <table class="table table-bordered table-striped align-middle" id="tbUsuarios" cellspacing="0">
                            <thead class="table-dark text-center">
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>@Html.DisplayNameFor(m => m.Celular)</th>
                                    <th>@Html.DisplayNameFor(m => m.Correo)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(mbox => item.Id)</td>
                                        <td>@Html.DisplayFor(mbox => item.Nombre)</td>
                                        <td>@Html.DisplayFor(mbox => item.Telefono)</td>
                                        <td>@Html.DisplayFor(mbox => item.Celular)</td>
                                        <td>@Html.DisplayFor(mbox => item.Correo)</td>
                                        <td class="text-center">
                                            <a class="btn btn-warning btn-sm me-1" asp-action="Editar" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i>Editar</a>
                                            <a class="btn btn-info btn-sm me-1" asp-action="Detalles" asp-route-id="@item.Id"><i class="bi bi-info-circle-fill"></i>Detalles</a>
                                            <a class="btn btn-danger btn-sm" asp-action="Borrar" asp-route-id="@item.Id"><i class="bi bi-eraser-fill"></i>Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            No hay registros disponibles.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tbUsuarios').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                    "infoEmpty": "Mostrando 0 a 0 de 0 entradas",
                    "infoFiltered": "(filtrado de _MAX_ entradas totales)",
                    "lengthMenu": "Mostrar _MENU_ entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}
